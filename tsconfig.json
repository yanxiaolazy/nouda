{
  "compilerOptions": {
    "target": "es2016",
    "module": "es6",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "removeComments": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
